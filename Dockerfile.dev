# syntax=docker/dockerfile:1
# Dockerfile.dev - Development Environment
# Optimized for hot-reload and debugging

FROM node:22-alpine

WORKDIR /app

# Enable hot reload/polling if needed (optional)
ENV WATCHPACK_POLLING=true
# Skip playwright browser download (use external service)
ENV PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1

# Compatibilidade glibc e ferramentas de desenvolvimento
RUN apk add --no-cache git bash curl libc6-compat

COPY package.json package-lock.json* ./

# Install ALL dependencies (including dev)
# --legacy-peer-deps necessario para resolver conflitos de peer deps do projeto
RUN npm ci --legacy-peer-deps

COPY . .

EXPOSE 3000

CMD ["npm", "run", "dev"]
