{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "ignoreDeprecations": "5.0",
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist-test",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/app/*": ["./src/app/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/types/domain/*": ["./src/types/domain/*"],
      "@/types/contracts/*": ["./src/types/contracts/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/jest-dom.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
